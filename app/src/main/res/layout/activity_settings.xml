<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteVIDS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black_tint"
            android:clickable="true"
            android:text="Delete Videos"
            android:textStyle="bold"
            app:srcCompat="@drawable/background_fade_blue"
            android:layout_gravity="center"
            app:icon="@drawable/baseline_camera_24"
            app:iconGravity="textEnd"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteIMAGES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black_tint"
            android:clickable="true"
            android:text="Delete Images"
            android:textStyle="bold"
            app:srcCompat="@drawable/background_fade_blue"
            app:icon="@drawable/baseline_collections_24"
            app:iconGravity="textEnd"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>